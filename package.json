{
  "name": "chatroom",
  "private": true,
  "type": "module",
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ],
    "catalog": {
      "@better-auth/expo": "^1.4.18",
      "@orpc/client": "^1.12.2",
      "@orpc/openapi": "^1.12.2",
      "@orpc/server": "^1.12.2",
      "@orpc/tanstack-query": "^1.12.2",
      "@orpc/zod": "^1.12.2",
      "@tanstack/react-query": "^5.90.12",
      "@types/bun": "^1.3.9",
      "@types/pg": "^8.16.0",
      "better-auth": "^1.4.18",
      "dotenv": "^17.2.2",
      "drizzle-orm": "^0.45.1",
      "hono": "^4.8.2",
      "typescript": "^5",
      "zod": "^4.1.13"
    }
  },
  "scripts": {
    "build": "turbo build",
    "check": "ultracite check",
    "check-types": "turbo check-types",
    "clean": "git clean -xdf node_modules",
    "clean:workspaces": "turbo run clean",
    "db:generate": "turbo -F @chatroom/db db:generate",
    "db:migrate": "turbo -F @chatroom/db db:migrate",
    "db:push": "turbo -F @chatroom/db db:push",
    "db:studio": "turbo -F @chatroom/db db:studio",
    "dev": "turbo dev",
    "dev:native": "turbo -F native dev",
    "dev:server": "turbo -F server dev",
    "dev:web": "turbo -F web dev",
    "fix": "ultracite fix",
    "prepare": "husky",
    "sherif": "bx sherif",
    "sherif:fix": "bx sherif -f"
  },
  "lint-staged": {
    "**/package.json": "sort-package-json",
    "*.{js,jsx,ts,tsx,json,jsonc,css,scss,md,mdx}": [
      "bun x ultracite fix"
    ]
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.13",
    "@chatroom/config": "workspace:*",
    "@types/bun": "catalog:",
    "husky": "latest",
    "lefthook": "latest",
    "lint-staged": "latest",
    "sort-package-json": "^3.6.1",
    "turbo": "^2.8.7",
    "typescript": "catalog:",
    "ultracite": "7.1.5"
  },
  "packageManager": "bun@1.3.9",
  "engines": {
    "bun": ">=1.3.9"
  }
}
