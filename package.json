{
  "name": "chatroom",
  "private": true,
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ],
    "catalog": {
      "dotenv": "^17.2.2",
      "zod": "^4.1.13",
      "typescript": "^5",
      "@types/bun": "^1.3.4",
      "hono": "^4.8.2",
      "@orpc/server": "^1.12.2",
      "@orpc/openapi": "^1.12.2",
      "@orpc/zod": "^1.12.2",
      "better-auth": "^1.4.18",
      "@orpc/tanstack-query": "^1.12.2",
      "@orpc/client": "^1.12.2",
      "@tanstack/react-query": "^5.90.12",
      "@better-auth/expo": "^1.4.18",
      "drizzle-orm": "^0.45.1",
      "@types/pg": "^8.16.0"
    }
  },
  "type": "module",
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "check-types": "turbo check-types",
    "dev:native": "turbo -F native dev",
    "dev:web": "turbo -F web dev",
    "dev:server": "turbo -F server dev",
    "db:push": "turbo -F @chatroom/db db:push",
    "db:studio": "turbo -F @chatroom/db db:studio",
    "db:generate": "turbo -F @chatroom/db db:generate",
    "db:migrate": "turbo -F @chatroom/db db:migrate",
    "check": "ultracite check",
    "fix": "ultracite fix",
    "prepare": "husky"
  },
  "dependencies": {
    "@chatroom/env": "workspace:*",
    "dotenv": "catalog:",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.13",
    "@chatroom/config": "workspace:*",
    "@types/bun": "catalog:",
    "husky": "latest",
    "lefthook": "latest",
    "lint-staged": "latest",
    "turbo": "^2.6.3",
    "typescript": "catalog:",
    "ultracite": "7.1.5"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,jsonc,css,scss,md,mdx}": [
      "bun x ultracite fix"
    ]
  },
  "packageManager": "bun@1.3.9"
}
